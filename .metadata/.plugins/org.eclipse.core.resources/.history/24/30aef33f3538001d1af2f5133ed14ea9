
public class mukemmelSayi {

	public static void main(String[] args) {
		int sayi = 6;
		int total = 0;
		
		for (int i = 0; i < sayi; i++) {
			if (sayi % i == 0) {
				total+=i;
			}
		}

		if(sayi == total) {
			System.out.println("Sayı mükemmel sayidir");
		}else {
			System.out.println("Sayı mükemmel sayı değildir");
		}
	}

}
